<!-- nav bar -->
<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" id="logo" href="#">Vegan</a>
  <div class="text-right">
    <a href="login" style="display:flexbox;" id="logoutlink"><button class="btn btn-outline-secondary" id="logoutBtn"
        type="button">
        Log out
      </button></a>
  </div>
</nav>
<br />
<div class="container">
  <div class="row justify-content-center">
    <!-- search bar -->
    <form class="form-inline" id="inputform">
      <input class="form-control" id="inputName" type="search"
        placeholder="Enter Vegan Restaurant Name and click enter key for search" />
      <!-- <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button> -->
    </form>
  </div>

  <br />
  <div class="row">
    <p style="font-weight: 800; font-size:30px; padding: 0px 0px 0px 40px">
      Just for you:
    </p>
  </div>
  <div class="row justify-content-center">
    <!-- list of restaurant -->
    <ul style="list-style: none;" class="listOfRestaurant">
      {{#each restaurant}}
      <li>
        {{!-- <a data="" href="restuarant.html"> --}}

        <div class="card mb-3" style="max-width: 100%;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="{{image}}" class="card-img" alt="image of restaurant" />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-geo-alt" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                </svg> {{address}}
                  <br>
                  <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-telephone-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M2.267.98a1.636 1.636 0 0 1 2.448.152l1.681 2.162c.309.396.418.913.296 1.4l-.513 2.053a.636.636 0 0 0 .167.604L8.65 9.654a.636.636 0 0 0 .604.167l2.052-.513a1.636 1.636 0 0 1 1.401.296l2.162 1.681c.777.604.849 1.753.153 2.448l-.97.97c-.693.693-1.73.998-2.697.658a17.47 17.47 0 0 1-6.571-4.144A17.47 17.47 0 0 1 .639 4.646c-.34-.967-.035-2.004.658-2.698l.97-.969z"/>
                  </svg> {{phone}}
                </p>
                <button class="checkout btn btn-outline-secondary" data="{{key}}">Check it out</button>
              </div>
            </div>
          </div>
        </div>
        </a>
      </li>
      {{/each}}

    </ul>
  </div>
  <!-- load more link -->
  <div class="row justify-content-center">
    <button class="btn" id="loginBtn" type="button">see more...</button>
    <!-- <a class="nav-link" id="loadmoreBtn" href="#">load more...</a> -->
  </div>
  <br />
  <br />
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/index.js"></script>