<!-- nav bar -->
<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" id="logo" href="#">Vegan</a>
  <div class="text-right">
    <a href="login" style="display:flexbox;" id="logoutlink"><button class="btn btn-outline-secondary" id="logoutBtn"
        type="button">
        Log out
      </button></a>
  </div>
</nav>
<br />
<div class="container">
  <div class="row justify-content-center">
    <!-- search bar -->
    <form class="form-inline" id="inputform">
      <input class="form-control" id="inputName" type="search"
        placeholder="Enter Vegan Restaurant Name and click enter key for search" />
      <!-- <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button> -->
    </form>
  </div>
  <br />
  <div class="row">
    <p style="font-weight: 800; font-size:30px; padding: 0px 0px 0px 40px">
      Just for you:
    </p>
  </div>
  <div class="row justify-content-center">
    <!-- list of restaurant -->
    <ul style="list-style: none;" class="listOfRestaurant">
      {{#each restaurant}}
      <li>
        <a href="restuarant">
          <div class="card mb-3" style="max-width: 100%;">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="{{image}}" class="card-img" alt="image of restaurant" />
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">{{name}}</h5>
                  <p class="card-text">
                    {{address}}
                    <br>
                    {{phone}}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </a>
      </li>
      {{/each}}

    </ul>
  </div>
  <!-- load more link -->
  <div class="row justify-content-center">
    <button class="btn" id="loginBtn" type="button">see more...</button>
    <!-- <a class="nav-link" id="loadmoreBtn" href="#">load more...</a> -->
  </div>
  <br />
  <br />
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/index.js"></script>