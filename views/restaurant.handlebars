{{#each restaurant}}
<div class="container ">
    <div class="row justify-content-center">
        {{!-- <div class="col "> --}}
        <img src="{{image_url}}" alt="Restaurant-Image" style="width: 500px; height:auto;" class="restaurant-img" />
        {{!-- </div> --}}
    </div>

    {{!-- Restaurant Info, Rating, and Review --> --}}
    <div class="row">
        <div class="col">
            <h1 id="restaurant-title" class="restaurant-title">{{name}}</h1>
            <p>
                {{location.display_address}}
                <br>
                {{display_phone}}
                <br>
                {{url}}
                <br>
                {{rating}}
            </p>
        </div>
        {{!-- <div class="save-review-btns">
            <button id="save-btn" class="btn-outline-secondary btn rounded">Save</button>
            <button id="review-btn" class="btn-outline-secondary btn rounded">Review</button>
        </div> --}}
    </div>

    <section class="user-review">
        <div class="row">
            <div class="col">
                <h2>Reviews</h2>
                <div class="card" style="margin-bottom: 20px; padding: 10px;">
                    <div class="col">
                        <textarea name="user-review" id="user-input" cols="46" rows="5">

                        </textarea>
                    </div>

                    <div>
                        <button id="submit-btn" class="btn-outline-secondary btn rounded" data="{{id}}"
                            style="float: right;">Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <h2>Other User's Review</h2>
    {{#each review}}
    <section class="others-review">
        <div class="row">
            <div class="col">
                <h4> User ID: {{post.UserId}}</h4>
            </div>
        </div>
        <div class="card" style="margin-bottom: 20px; padding: 10px;">
            <div class="col user-name">
                <h3 id="others-name"></h3>
            </div>
            <div>
                <p id="others-input">
                    {{post.body}}
                </p>
            </div>
        </div>
    </section>
    {{/each}}
</div>
{{/each}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
